                  "addressPrefixes": [
                    "10.2.0.0/16"
                  ]
                },
                "subnets": [
                  {
                    "name": "data",
                    "properties": {
                      "addressPrefix": "10.2.2.0/24",
                      "serviceEndpoints": "[if(parameters('enableServiceEndpoint'), createArray(createObject('service', 'Microsoft.Storage')), createArray())]"
                    }
                  }
                ]
              }
            },
            {
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "apiVersion": "2024-10-01",
              "name": "[format('{0}/{1}', variables('hubVnetName'), 'Hub-to-SpokeApp')]",
